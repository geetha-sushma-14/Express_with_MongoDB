<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Chats</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <h3>All Chats!</h3>
    <form method="get" action="/chats/new">
        <button>New Chat</button>
    </form>
    <%for(let chat of chats){%>
        <div class="chat">
            <p>From: <%=chat.from%></p>
            <div class="msg">
                <p><%=chat.msg%></p>
                <form action="/chats/<%=chat._id%>/edit" method="get">
                    <button>Edit</button>
                </form>
                <form action="/chats/<%=chat.id%>?_method=DELETE" method="POST">
                    <button>Delete</button>
                </form>
            </div>
            <p>Received By: <%=chat.to%></p>
            <hr>
            <%= chat.created_at.toString().split(" ")[4]%> <br/>
            <%= chat.created_at.toString().split(" ").slice(0,4).join("-")%>
        </div>
        <br><br>
    <% } %>
</body>
</html>
